---
import { type CollectionEntry, getCollection, render } from "astro:content";
import StarlightPage from "@astrojs/starlight/components/StarlightPage.astro";

interface Props {
  entry: CollectionEntry<"docs">;
}

export async function getStaticPaths() {
  const allDocs = await getCollection("docs");
  const publishedDocs = allDocs.filter((b) => !b.data.draft);
  return publishedDocs.map((entry) => ({
    params: { slug: entry.id },
    props: { entry }
  }));
}

// 2. For your template, you can get the entry directly from the prop
const { entry } = Astro.props;
const { Content, headings } = await render(entry);
---

<StarlightPage
  frontmatter={{
    title: entry.data.title,
    description: entry.data.description,
    head: [
      // HACK - a little trip to YIKEA here, but I needed to override the width
      // for the blog without reimplementing the whole thing
      {
        tag: "style",
        content: `:root { --sl-content-width: 700px !important; }`
      }
    ],
    template: "splash"
  }}
  headings={headings}
>
  <div class="blog-content">
    <Content />
  </div>
</StarlightPage>

<style>
  .blog-meta {
    margin-bottom: 1rem;
    font-weight: 600;
  }

  .blog-content {
    display: flex;
    flex-direction: column;
    margin: auto;
    justify-content: center;
  }
</style>